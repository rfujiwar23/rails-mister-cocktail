<%= link_to "Delete #{@cocktail.name}", cocktail_path(@cocktail), method: :delete %>
<h3>Doses</h3>

  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>

  <% @cocktail.doses.each do | dose |  %>
    <li>
      <%= dose.ingredient.name %> - <%= dose.description %>
      <%= link_to "delete", dose_path(dose), method: :delete %>
      </li>
    <% end %>

