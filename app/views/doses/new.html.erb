
<div class="container">
<div class="row">

<h1>Add a dose to "<%=@cocktail.name%>"</h1>
<div class="put_your">
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
